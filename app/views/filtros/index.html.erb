<br/>
<center>
    <%= link_to 'Novo Filtro', new_filtro_path %> |
    <%= link_to 'Administrar Tema', temas_path %> |
    <%= link_to 'Ver Dados', dados_path %>

    <br /><br />
    <% if ! @filtros.empty? %>
        <table class="table-dados">
          <tr id="table-header">
            <th>Titulo</th>
            <th>Fonte</th>
            <th>Gráfico</th>
            <th>Faixa Etária</th>
            <th>Universo</th>
            <th>Tipo</th>
            <th>Área</th>
            <th>Sexo</th>
            <th>Cor</th>
            <th>Grupo</th>
            <th>Objetivo</th>
            <th></th>
            <th></th>
          </tr>

        <% @filtros.each do |filtro| %>
          <tr class="table-<%= cycle('even', 'odd') -%>">
            <td><%= link_to filtro.titulo, filtro %></td>
            <td><%= Pnad::FONTE.index(filtro.fonte) %></td>
            <td><%= Pnad::TIPO_GRAFICO.index(filtro.tipo_grafico) %></td>
            <td><%= Pnad::FXID.index(filtro.fxid) %></td>
            <td><%= Pnad::UNIV.index(filtro.univ) %></td>
            <td><%= Pnad::TIPO.index(filtro.tipo) %></td>
            <td><%= Pnad::AREA.index(filtro.area) %></td>
            <td><%= Pnad::SEXO.index(filtro.sexo) %></td>
            <td><%= Pnad::COR.index(filtro.cor) %></td>
            <td><%= Pnad::GRUPO.index(filtro.grupo) %></td>
            <td><%= Pnad::OBJETIVO.index(filtro.objetivo) %></td>
            <td><%= link_to 'Editar', edit_filtro_path(filtro) %></td>
            <td><%= link_to 'Apagar', filtro, method: :delete, data: { confirm: 'Você tem Certeza?' } %></td>
          </tr>
        <% end %>
        </table>
    <% else %>
        <br />
        <h3>Nenhum Filtro Encontrado.</h3>
    <% end %>
</center>
