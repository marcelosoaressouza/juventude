<%= render 'form' %>

<h2>Temas</h2>

<%= form_for @filtro do -%>
  <% Tema.all.each do |tema| -%>
    <div>
      <%= check_box_tag :tema_ids, tema.id, @filtro.temas.include?(tema), :name => 'filtro[tema_ids][]' -%>
      <%= label_tag :tema_ids, tema.titulo -%>
    </div>
  <% end -%>
  <%= submit_tag -%>
<% end -%>

<center>
	<%= link_to 'Mostrar', @filtro %> |
	<%= link_to 'Voltar', filtros_path %>
</center>
