<br />
<center>
  <%= link_to 'Editar', edit_indicador_path(@indicador) %> |
  <%= link_to 'Voltar', indicadors_path %>

  <p id="notice"><%= notice %></p>
</center>

<p>
  <b>Objetivo:</b>
  <%= Pnad::OBJETIVO.index(@indicador.objetivo) %>
</p>

<p>
  <b>Fonte:</b>
  <%= Pnad::FONTE.index(@indicador.fonte) %>
</p>

<% if ! @indicador.temas.empty? %>
<center>
  <p>
    <b>Temas que este Indicador faz Parte:</b>
      <table class="table-temas">
        <tr>
          <% @indicador.temas.each do |tema| -%>
            <td>
            <%= link_to (image_tag tema.imagem.url(:thumb)), tema %>
            <b><%= label_tag :tema_ids, tema.titulo -%></b>
            </td>
          <% end -%>
        </tr>
      </table>
  </p>
</center>
<% end %>
