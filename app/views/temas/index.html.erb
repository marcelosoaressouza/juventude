<br/>
<center>
    <%= link_to 'Novo Tema', new_tema_path %> |
    <%= link_to 'Administrar Indicador', indicadors_path %> |
    <%= link_to 'Ver Dados', dados_path %>

    <br /><br />
    <% if ! @temas.empty? %>
      <table class="table-dados">
        <tr id="table-header">
          <th></th>
          <th>Indicadors</th>
          <th></th>
          <th></th>
        </tr>

      <% @temas.each do |tema| %>
        <tr class="table-<%= cycle('even', 'odd') -%>">
          <td><%= link_to image_tag(tema.imagem.url(:thumb)), tema %> <br /><b><%= tema.titulo%></b></td>
          <td><%= tema.indicadors.count %></td>
          <td><%= link_to 'Editar', edit_tema_path(tema) %></td>
          <td><%= link_to 'Apagar', tema, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
        </tr>
      <% end %>
      </table>
    <% else %>
        <br />
        <h3>Nenhum Tema Encontrado.</h3>
    <% end %>
</center>
