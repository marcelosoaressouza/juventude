<br/>
<center>
    <%= link_to 'Novo Tema', new_tema_path %> |
    <%= link_to 'Administrar Filtro', filtros_path %> |
    <%= link_to 'Ver Pnads por Filtro', pnads_path %> |
    <%= link_to 'Ver Pnads por Tema', temas_pnads_path %>

    <br /><br />
    <% if ! @temas.empty? %>
      <table class="table-pnads">
        <tr id="table-header">
          <th>Título</th>
          <th>Filtros</th>
          <th></th>
          <th></th>
        </tr>

      <% @temas.each do |tema| %>
        <tr class="table-<%= cycle('even', 'odd') -%>">
          <td><%= link_to tema.titulo, tema %></td>
          <td><%= tema.filtros.count %></td>
          <td><%= link_to 'Editar', edit_tema_path(tema) %></td>
          <td><%= link_to 'Apagar', tema, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
      </table>
    <% else %>
        <br />
        <h3>Nenhum Tema Encontrado.</h3>
    <% end %>
</center>